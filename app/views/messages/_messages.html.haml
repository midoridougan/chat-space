.messages
  .upper-message
    .upper-message__name
      = message.user.name
    .upper-message__date
      = message.create_at.strftime("%Y/%m/%d %H:%M")
  .lower-message 
    - if message.body.present?   
      .lower-message__message
        = message.body
    =image_tag message.image.url, class: 'lower-message__image' if message.image.present?